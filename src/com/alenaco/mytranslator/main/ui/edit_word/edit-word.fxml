<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane id="gridPane" xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
          hgap="10" vgap="10">
    <rowConstraints>
        <RowConstraints prefHeight="10"/>
        <RowConstraints prefHeight="10"/>
        <RowConstraints prefHeight="10"/>
        <RowConstraints prefHeight="10"/>
        <RowConstraints prefHeight="10"/>
        <RowConstraints prefHeight="10"/>
        <RowConstraints prefHeight="10"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints minWidth="60" maxWidth="Infinity" halignment="CENTER">
        </ColumnConstraints>
        <ColumnConstraints minWidth="105" maxWidth="Infinity" halignment="CENTER">
        </ColumnConstraints>
        <ColumnConstraints minWidth="105" maxWidth="Infinity" halignment="CENTER">
        </ColumnConstraints>
    </columnConstraints>

    <Label text="Chars" GridPane.columnIndex="0"
           GridPane.rowIndex="1" GridPane.rowSpan="3"/>

    <TextArea fx:id="translationTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="3"
              GridPane.columnSpan="2"/>

    <Button fx:id="submitButton" text="Submit"
            prefWidth="100" prefHeight="20" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="3" GridPane.rowSpan="2"
            GridPane.halignment="CENTER"
            onAction="#handleSubmitButtonAction">
    </Button>
</GridPane>